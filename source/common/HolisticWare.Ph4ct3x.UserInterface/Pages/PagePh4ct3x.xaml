<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="HolisticWare.Ph4ct3x.UserInterface.PagePh4ct3x"
	xmlns:CustomControl="clr-namespace:HolisticWare.Ph4ct3x.UserInterface;assembly=HolisticWare.Ph4ct3x.UserInterface"
	>
	<TabbedPage.Children>
		<!--
		http://www.patridgedev.com/2015/03/07/xamarin-forms-switching-tabbedpage-tabs-programmatically/

		https://forums.xamarin.com/discussion/17704/navigationpage-in-xaml
		http://forums.xamarin.com/discussion/17704/navigationpage-in-xaml
		http://forums.xamarin.com/discussion/19680/navigationpage-example
	

		<NavigationPage
			Title="Navigation"
			>
			<x:Arguments>
				<Page>
					<ScrollView>
						<StackLayout 
							x:Name="layout" Orientation="Vertical" VerticalOptions="Start" HorizontalOptions="Center">  
						<ActivityIndicator x:Name="activity"></ActivityIndicator>                                                   
						</StackLayout>  
					</ScrollView>    
				</Page>    
			</x:Arguments>		
		</NavigationPage>
		-->
	    <ContentPage Title="Ph4ct3x" >
			<CustomControl:UserControlViewMainMenu>
			</CustomControl:UserControlViewMainMenu>
	    </ContentPage>
	    <ContentPage Title="About">
		    <StackLayout>
			    <Label Text="Above TableView"></Label>
			    <TableView>
			        <TableView.Root>
			            <TableSection Title="Test">     
			                <EntryCell Label="EntryCell"></EntryCell>
			                <TextCell Text="Test"></TextCell>
			                <ViewCell>
			                    <ViewCell.View>
			                        <StackLayout Orientation="Horizontal" >
			                        <BoxView Color="Red"></BoxView>
			                        <StackLayout>
			                            <Label Text="News Item 1"></Label>
			                            <Label Text="News URL 1"></Label>
			                        </StackLayout>
			                        <BoxView x:Name="boxView2" Color="Blue" ></BoxView>
			                        </StackLayout>      
			                    </ViewCell.View>
			                </ViewCell>
			            </TableSection>
			        </TableView.Root>
			    </TableView>
		    </StackLayout>
	    </ContentPage>
	    <ContentPage Title="Settings">
	    </ContentPage>
	</TabbedPage.Children>

</TabbedPage>
