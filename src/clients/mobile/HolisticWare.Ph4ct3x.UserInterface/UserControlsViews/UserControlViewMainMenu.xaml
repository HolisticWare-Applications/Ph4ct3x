<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="HolisticWare.Ph4ct3x.UserInterface.UserControlViewMainMenu"
	>
	<ContentView.Content>
    	<Grid
    		>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>	

			<Label
				Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
				Text="Date / Time Data"
				>
			</Label>

    		<DatePicker
    			x:Name="pickerDate"
				Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
    			HorizontalOptions="FillAndExpand"
    			>
    		</DatePicker>
    		<TimePicker
    			x:Name="pickerTime"
				Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"
    			HorizontalOptions="FillAndExpand"
    			>
    		</TimePicker>

			<Label
				Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
				Text="User Data"
				>
			</Label>

			<Label
				Grid.Row="3" Grid.Column="0"
				Text="User:"
				>
			</Label>
			<Picker 
				x:Name="pickerUser" 
				SelectedIndex="{Binding Users}" 
				HorizontalOptions="FillAndExpand"
		    	Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"
				>
				<Picker.Items>
					<x:String>jaja</x:String>
					<x:String>zunzo</x:String>
					<x:String>vyeko</x:String>
					<x:String>chookee</x:String> 
					<x:String>moljac</x:String> 
				</Picker.Items>
			</Picker> 	

			<Button
				x:Name="buttonUserAdd" 
				HorizontalOptions="FillAndExpand"
		    	Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
		    	Clicked="buttonUserAdd_Clicked"
		    	Text="Add User"
				>
			</Button>
			<Button
				x:Name="buttonUserView" 
				HorizontalOptions="FillAndExpand"
		    	Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2"
		    	Clicked="buttonUserView_Clicked"
		    	Text="View User"
				>
			</Button>

    	</Grid>
